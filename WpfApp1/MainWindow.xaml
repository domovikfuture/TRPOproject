<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Adjust" Height="450" Width="800"
        Background="AliceBlue" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Foreground="Black" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="0">
            Регистрация
        </Label>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>


            <Label Grid.Row="0" FontSize="23" VerticalAlignment="Center" HorizontalAlignment="Right">Логин:</Label>
            <Label Grid.Row="1" FontSize="23" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2">Пароль:</Label>
            <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Height="27" FontSize="20" Foreground="Green">Логин</TextBox>
        </Grid>
    </Grid>
</Window>
