<Window x:Class="WpfApp1.Goods"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
         
        Title="Adjust" Height="450" Width="800" ResizeMode="NoResize">

    <Grid Background="#d9cece">
        <Border Background="White" VerticalAlignment="Center" Padding="40,20" MinWidth="400" MaxWidth="600" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="DarkGray" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="30" Style="{StaticResource MaterialDesignCharacterCounterTextBlock}" Text="Пиар Дом"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    

                    <StackPanel >
                        <Label Content="Фильтры" HorizontalAlignment="Center" FontSize="15"/>
                        <TextBox x:Name="SeatchPrice" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  materialDesign:HintAssist.Hint="По цене" Margin="0 0 0 5" Cursor="IBeam"/>

                        <StackPanel Orientation="Horizontal" x:Name="RadioButtonFilter">
                            <RadioButton GroupName="FiltPrice" Content="Дешевле" Margin="10 0" Checked="RadioButton_Checked" IsChecked="True" Background="#FF0A0A0A" BorderBrush="Black"/>
                            <RadioButton GroupName="FiltPrice" Content="Дороже" Margin="10 0" Checked="RadioButton_Checked" BorderBrush="Black" Background="Black"/>
                            <RadioButton GroupName="FiltPrice" Content="Ровно" Margin="10 0" Checked="RadioButton_Checked" Background="Black" BorderBrush="Black"/>
                        </StackPanel>

                        <TextBox x:Name="SearchName" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  materialDesign:HintAssist.Hint="По названию" Margin="0 0 0 5"/>

                        <Grid Margin="0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button Content="Поиск" Height="40" Grid.Column="0" Style="{StaticResource MaterialDesignToolButton}"
                                    Click="Search" Cursor="Hand" Background="Black" BorderBrush="#FF131313" />
                            <Button Content="Сброс" Height="40" Grid.Column="1" Style="{StaticResource MaterialDesignToolButton}"
                                    Click="Reset" BorderBrush="Black" Background="Black"/>
                            <Button Content="Добавить" x:Name="ButtonAdd" Height="40" Grid.Column="2" Style="{StaticResource MaterialDesignToolButton}"
                                    Click="AddGoods" Cursor="Hand" />
                        </Grid>
                    </StackPanel>

                    <Border Background="DarkSeaGreen" Grid.Column="1" CornerRadius="20"/>

                    <ListView Height="220" x:Name="listGoods" Grid.Column="2">
                    <ListView.View>
                        <GridView >
                            <GridViewColumn DisplayMemberBinding="{Binding Path=name}" 
                                            Header="Название" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=price}" 
                                            Header="Цена"/>
                            <!--<GridViewColumn Header="Изображение">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Path=Image}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>-->
                        </GridView>
                    </ListView.View>
                </ListView>

                    
                </Grid>
                <Grid Margin="20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Товары" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedButton}" Background="Black" Foreground="White" BorderBrush="#FF020202"/>
                    <Button Content="Корзина" Grid.Column="2" Click="GoToOrders" Background="#FF0C0C0C" BorderBrush="#FF020202" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>